[alias]
    # a command to delete local branches that tracked remote branches which
    # have been deleted in the remote repo
    prune-branches = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -d
    prune-branches-show = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}'
    prune-branches-force = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
